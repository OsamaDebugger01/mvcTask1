<form action="/Thanks/AddGuest">
    <table>
        <tr>
            <td>
                <lable for="name">Name</lable>
            </td>
            <td>
                <input id="name" name="name" type="text"/>
            </td>
        </tr>
        <tr>
            <td>
                <lable for="email">Email</lable>
            </td>
            <td>
                <input id="email" name="email" type="email" />
            </td>
        </tr>
        <tr>
            <td>
                <lable for="phone">Phone</lable>
            </td>
            <td>
                <input id="phone" name="phone" type="text" />
            </td>
        </tr>
        <tr>
            <td>
                <lable for="attend">Will Attend</lable>
            </td>
            <td>
                <input id="attend" name="willAttend" type="radio" value="True"/>
            </td>
        </tr>
        <tr>
            <td>
                <lable for="notattend">Not Attend</lable>
            </td>
            <td>
                <input id="notattend" name="willAttend" type="radio" value="False"/>
            </td>
        </tr>
    </table>
    <button type="submit">Submit</button>
</form>
